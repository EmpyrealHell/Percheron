<Window x:Name="Window" x:Class="Percheron.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Percheron.Client"
        mc:Ignorable="d"
        Title="Percheron" Height="900" Width="1600" Loaded="Window_Loaded">
    <Grid>
        <RichTextBox x:Name="Messages" Margin="0,0,0,23" VerticalContentAlignment="Bottom" Background="Black" BorderBrush="#FF54524A" Foreground="White" FontFamily="Calibri" FontSize="14"/>
        <TextBox x:Name="Input" TextWrapping="Wrap" Text="Input" Height="23" VerticalAlignment="Bottom" PreviewKeyDown="Input_PreviewKeyDown" Background="Black" BorderBrush="#FF54524A" Foreground="White"/>

    </Grid>
</Window>
